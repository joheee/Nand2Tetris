/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel,out=notSel);
    And(a=a,b=notSel,out=firstAnd);
    And(a=b,b=sel,out=secondAnd);
    Or(a=firstAnd,b=secondAnd,out=out);    
}